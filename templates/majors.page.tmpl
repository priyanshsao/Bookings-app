{{template "base" .}}

{{define "css"}}
<style>
  body {
    font-family: "Oswald", sans-serif;
  }

  h1 {
    font-family: "Playfair Display", serif;
  }

  .overlay {
    background-color: rgba(0, 0, 0, 0.5);
    height: 100%;
    width: 100%;
  }

  .room-info {
    background-color: rgba(255, 255, 255, 0.8);
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    margin-left: 20px;
    margin-right: 20px;
  }

  .room-image {
    margin-left: 20px;
    margin-right: 20px;
  }

  .btn {
    transition: transform 0.3s ease-in-out;
  }

  .btn:hover {
    transform: scale(1.05);
  }

</style>
{{ end }}

{{define "content"}}

<!-- Room Details Section -->
<section id="details" class="container mx-auto py-16 px-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="room-info">
      <h2 class="text-4xl font-bold mb-4 text-gray-900">Luxurious Stay</h2>
      <p class="text-gray-700 mb-4">
        Step into the Majors Suite, a room that boasts timeless elegance with
        modern amenities. Enjoy a spacious king-sized bed, plush linens, and a
        private balcony overlooking stunning gardens.
      </p>
      <ul class="list-disc pl-5 mb-4">
        <li class="text-gray-700">King-size bed with luxury bedding</li>
        <li class="text-gray-700">Private balcony with a garden view</li>
        <li class="text-gray-700">Complimentary Wi-Fi and flat-screen TV</li>
        <li class="text-gray-700">Ensuite bathroom with premium toiletries</li>
      </ul>
      <a
        href="#"
        class="btn bg-blue-500 text-white py-2 px-6 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 ease-in-out transform hover:scale-105"
        id="btn-search"
        >Check for availability</a
      >
    </div>
    <div>
      <img
        src="https://plus.unsplash.com/premium_photo-1661964402307-02267d1423f5?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8aG90ZWwlMjByb29tfGVufDB8fDB8fHww"
        alt="Majors Suite Room"
        class="w-full rounded-lg shadow-md room-image"
      />
    </div>
  </div>
</section>

<!-- Modal -->
<div
  id="dateModal"
  class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center hidden"
>
  <div class="bg-white p-6 rounded-lg shadow-lg w-1/3">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold">Check Availability</h3>
      <!-- Close Button as SVG Icon -->
      <svg
        id="closeModal"
        style="color:rgb(216, 75, 75);"
        class="close-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-x"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </div>

    <!-- Modal Content -->
    <div class="mb-4">
      <label for="checkin" class="block text-gray-700 mb-2"
        >Check-in Date</label
      >
      <input
        type="date"
        id="checkin"
        class="w-full p-2 border border-gray-300 rounded"
      />
    </div>
    <div class="mb-4">
      <label for="checkout" class="block text-gray-700 mb-2"
        >Check-out Date</label
      >
      <input
        type="date"
        id="checkout"
        class="w-full p-2 border border-gray-300 rounded"
      />
    </div>

    <!-- Submit Button -->
    <button
      id="submitDates"
      class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition"
    >
      Submit
    </button>
  </div>
</div>

<!-- Amenities Section -->
<section class="bg-gray-200 py-16">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold text-gray-800 mb-6">Room Amenities</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white p-8 shadow-lg rounded-lg">
        <img
          src="https://images.unsplash.com/photo-1509600110300-21b9d5fedeb7?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fHBvb2x8ZW58MHx8MHx8fDA%3D"
          alt="Pool"
          class="w-full h-32 object-cover rounded-md mb-4"
        />
        <h3 class="text-2xl font-bold mb-2">Private Pool</h3>
        <p class="text-gray-600">
          Enjoy a refreshing dip in your very own private pool, providing a
          serene escape right outside your room.
        </p>
      </div>
      <div class="bg-white p-8 shadow-lg rounded-lg">
        <img
          src="https://images.unsplash.com/photo-1678899206132-21f83f91818b?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8Z2FtZSUyMHpvbmV8ZW58MHx8MHx8fDA%3D"
          alt="Game zone"
          class="w-full h-32 object-cover rounded-md mb-4"
        />
        <h3 class="text-2xl font-bold mb-2">Game Zone</h3>
        <p class="text-gray-600">
          Experience the thrill of gaming in our dedicated Game Zona, equipped
          with the latest gaming consoles and a variety of popular games for all
          ages.
        </p>
      </div>
      <div class="bg-white p-8 shadow-lg rounded-lg">
        <img
          src="https://images.unsplash.com/photo-1659614871014-50243eb3579a?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Fitness Center"
          class="w-full h-32 object-cover rounded-md mb-4"
        />
        <h3 class="text-2xl font-bold mb-2">Fitness Center</h3>
        <p class="text-gray-600">
          Keep up with your fitness routine in our state-of-the-art fitness
          center.
        </p>
      </div>
    </div>
  </div>
</section>
{{ end }}

{{define "js"}}

<script>
  // Modal functionality
  const modal = document.getElementById("dateModal");
  const checkAvailabilityButton = document.getElementById("btn-search");
  const closeModalButton = document.getElementById("closeModal");
  const submitDatesButton = document.getElementById("submitDates");

  // Fetch data from /search-availability-json
  function checkAvailability() {
    const checkin = document.getElementById("checkin").value;
    const checkout = document.getElementById("checkout").value;
    const csrfToken = document.querySelector('meta[name="csrf_token"]').content;

    if (checkin !== "" && checkout !== "") {
      console.log(`Check-in: ${checkin}, Check-out: ${checkout}`);

      // Use fetch API to send data and get response
      fetch("/search-availability-json", {
        method: "POST", // You can change this to 'GET' if necessary
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": csrfToken,
        },
        body: JSON.stringify({
          checkin: checkin,
          checkout: checkout,
          csrf_token: csrfToken,
        }),
      })
        .then((response) => {
          if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
          }
          return response.json(); // Parse the response as JSON
        })
        .then((data) => {
          console.log("Status: OK");
          console.log("Your POST request was successful!");
          console.log(data.ok); // Log the retrieved data
          console.log(data.message); // Log the retrieved data
        })
        .catch((error) => {
          console.error("Error fetching data:", error);
        });

      // Close the modal after submission
      modal.style.display = "none";
    } else {
      alert("Please enter both check-in and check-out dates.");
    }
  }

  checkAvailabilityButton.onclick = function () {
    modal.style.display = "flex";
  };

  closeModalButton.onclick = function () {
    modal.style.display = "none";
  };

  submitDatesButton.onclick = checkAvailability;

  // Close modal when clicking outside of it
  window.onclick = function (event) {
    if (event.target === modal) {
      modal.style.display = "none";
    }
  };
</script>

{{ end }}
